{
  "python.linting.enabled": false,
  "python.jediEnabled": true,
  "python.venvFolders": ["~/.local/envs"],
  "coc.preferences.jumpCommand": "drop",
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,

  "languageserver": {
    "ccls": {
      "command": "ccls",
      "disableDiagnostics": true,
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/home/ANT.AMAZON.COM/shayagr/.cache/ccls"
         },
         "index": {
         	 "threads": 6,
         	 "multiVersion": 2
         }
       }
    },
   "lua": {
		"command": "/home/ANT.AMAZON.COM/shayagr/workspace/Software/lua-language-server/bin/Linux/lua-language-server",
		"args": ["-E", "/home/ANT.AMAZON.COM/shayagr/workspace/Software/lua-language-server/main.lua"],
		"filetypes": ["lua"],
		"rootPatterns": [".git/"],
		"settings": {
			"Lua": {
				"workspace": {
					"library": {
						"~/workspace/Software/awesome/lib": true,
						"/usr/bin/lua5.3": true
					},
					"maxPreload": 2000,
					"preloadFileSize": 1000
				},
				"runtime": {
					"version": "Lua 5.3"
				},
				"diagnostics": {
					"enable": false,
					"globals": ["hs", "vim", "it", "describe", "before_each", "after_each"],
					"disable": ["lowercase-global"]
				},
				"completion": {
					"keywordSnippet": "Disable"
				}
